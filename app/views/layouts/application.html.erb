<!DOCTYPE html>
<html>
<head>
  <title>StartupMap</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="row header">
  <div class="three columns">
    <!-- <h1 id="bloom-logo"><img src="<%= asset_path('bloom-logo.png') %>" alt="Bloom"></h1> -->
    <%= link_to image_tag(asset_path('bloom-logo.png'), alt:'<h1>Bloom</h1>.html_safe', id: 'bloom-logo'),  root_path %>
  </div>
  <div class="six columns">
    <form action="#" id="search-form">
      <input type="text" name="search" id="search" placeholder="Find Company">
      <button type="submit" id="search-btn">search</button>
    </form>
  </div>
  <div class="three columns">
    <%= link_to "<button>Add Company</button>".html_safe, new_company_path, class: "add-new" %>
  </div>
</div>
<%= yield %>

</body>
</html>
